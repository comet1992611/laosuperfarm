= field_set do
  = f.input :name
  - if @document_template.new_record?
    = f.input :nature, collection: Nomen::DocumentNature.selection
  = f.input :archiving
  = f.input :active
  = f.input :by_default
  = f.input :formats, :placeholder => 'pdf,odt,...'
  - unless @document_template.managed?
    = f.input :language
    = f.input :source, as: :file
  = f.custom_fields
