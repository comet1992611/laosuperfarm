- main_toolbar do |t|
  = t.edit resource
  = t.destroy

= main_informations do
  = attributes_list do |l|
    - l.attribute :name
    - l.attribute :description

= cobbles do |c|
  - subscriptions_chart(resource, cobbler: c)
  - c.cobble :subscriptions do
    = cobble_toolbar do |t|
      = t.new(params: {controller: :subscriptions, nature_id: resource.id})
    = cobble_list :subscriptions
  - c.cobble :product_natures, title: SubscriptionNature.human_attribute_name(:product_natures) do
    = cobble_list :product_natures
