%h2
  = t('devise.invitations.edit.header')

= form_for resource, as: resource_name, url: user_invitation_path, method: :put do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token

  .field
    = f.label :password
    = f.password_field :password

  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .field
    = f.submit t("devise.invitations.edit.submit_button")

  .field= link_to t(".ekylibre_oauth_sign_in", :default => "Sign in with Ekylibre.com"), user_ekylibre_omniauth_authorize_path(invitation_token: resource.invitation_token), class: "btn btn-primary btn-lg btn-block"
